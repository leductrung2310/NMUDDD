<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/similar_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <RelativeLayout
        style="@style/loginHeader"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_listitem">


        <ImageView

            android:id="@+id/similar_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_makeup" />

        <TextView
            android:id="@+id/similar_name"
            style="@style/loginHeader"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/similar_image"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/similar_price"
            style="@style/loginHeader"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/similar_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="price"
            android:textSize="25sp" />

    </RelativeLayout>

</RelativeLayout>