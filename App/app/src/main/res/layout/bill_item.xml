<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/login_bk_color"
    android:padding="5dp"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/l"
        android:layout_width="349dp"
        android:layout_height="226dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/ic_launcher_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/situationBillTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/oswald_light"
                android:text="Name: "
                android:textColor="#de637e" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="116dp"
                android:fontFamily="@font/oswald_light"
                android:text="Address: "
                android:textColor="#de637e" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/namebillTv"
                android:fontFamily="@font/oswald_light"
                android:text="Phone: "
                android:textColor="#de637e" />

            <TextView
                android:id="@+id/namebillTv"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/textView26"
                android:ems="10"
                android:fontFamily="@font/oswald_light"
                android:inputType="textPersonName"
                android:textColor="#de637e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/priceBillTv"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantityBillTv"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="17dp"
                android:layout_toEndOf="@+id/textView28"
                android:ems="10"
                android:fontFamily="@font/oswald_light"
                android:inputType="textPersonName"
                android:textColor="#de637e"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/addressBillEdt"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="106dp"
                android:layout_toEndOf="@+id/textView"
                android:ems="10"
                android:fontFamily="@font/oswald_light"
                android:inputType="textPersonName"
                android:textColor="#de637e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/quantityBillTv"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/textView27"
                android:ems="10"
                android:fontFamily="@font/oswald_light"
                android:inputType="textPersonName"
                android:textColor="#de637e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namebillTv"
                android:layout_alignParentStart="true"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/oswald_light"
                android:text="Total: "
                android:textColor="#de637e" />

            <Button
                android:id="@+id/showBillBtt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="161dp"
                android:background="@drawable/button_background_pay"
                android:gravity="center"
                android:text="Show order detail  "
                android:textAllCaps="false"
                android:textColor="#AF4669" />

            <Button
                android:id="@+id/showBillBtt2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="161dp"
                android:layout_marginEnd="110dp"
                android:background="@drawable/button_background_pay"
                android:gravity="center"
                android:text="Show order detail  "
                android:textAllCaps="false"
                android:textColor="#AF4669" />

            <Button
                android:id="@+id/confirmBtt"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="161dp"
                android:layout_marginEnd="7dp"
                android:layout_toEndOf="@+id/showBillBtt"
                android:background="@drawable/button_background_pay"
                android:gravity="center"
                android:text="Confirm order"
                android:textAllCaps="false"
                android:textColor="#AF4669"
                android:visibility="visible" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>