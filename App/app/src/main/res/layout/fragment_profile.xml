<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5c8ce">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/profile_top_background" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/oswald_light"
                    android:text="Lion Fischer "
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_light"

                    android:text="lionfischer@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_background_btn"
                        android:drawableStart="@drawable/ic_facebook"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="3dp" >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="45dp"
                                android:layout_height="39dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="7dp"
                                app:srcCompat="@drawable/ic_name" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:gravity="center_vertical"
                                android:text="Username" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_background_btn"
                        android:drawableStart="@drawable/ic_facebook"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="3dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="44dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="6dp"
                                app:srcCompat="@drawable/ic_email" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Email" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_background_btn"
                        android:drawableStart="@drawable/ic_facebook"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="3dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="48dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_phoneno" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Phone Number" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_background_btn"
                        android:drawableStart="@drawable/ic_facebook"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="3dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="42dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="3dp"
                                app:srcCompat="@drawable/ic_address" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Address" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_bg_btt"
                        android:drawableLeft="@drawable/ic_cart"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/oswald_light"
                        android:paddingRight="15dp"
                        android:text="Thông tin đơn hàng"
                        android:textAllCaps="false"
                        android:textColor="#e995a8"
                        android:textSize="22sp" />

                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:src="@android:drawable/ic_delete"
                        app:cb_color="#e995a8"
                        app:cb_pressedRingWidth="8dip" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="236dp"
                    android:layout_height="126dp"
                    android:elevation="3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.831"
                    app:srcCompat="@drawable/profile_avatar" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>