<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_phoneNo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5c8ce">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/profile_top_background" />

                <TextView
                    android:id="@+id/lb_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/oswald_light"
                    android:text="Lion Fischer "
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageProfile" />

                <TextView
                    android:id="@+id/lb_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_light"

                    android:text="lionfischer@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lb_username" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="152dp"
                    android:layout_height="131dp"
                    android:src="@drawable/profile_avatar"
                    app:civ_border_color="#f5c8ce"
                    app:civ_border_width="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                    app:layout_constraintEnd_toEndOf="@+id/imageView9"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="@+id/imageView9"
                    app:layout_constraintTop_toTopOf="@+id/imageView9"
                    app:layout_constraintVertical_bias="0.854" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lb_email">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_background_btn"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="3dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="45dp"
                                android:layout_height="39dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="7dp"
                                app:srcCompat="@drawable/ic_name" />

                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:gravity="center_vertical"
                                android:text="Username"
                                android:textColor="#e995a8" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_background_btn"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="44dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="6dp"
                                app:srcCompat="@drawable/ic_email" />

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Email"
                                android:textColor="#e995a8" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_background_btn"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="48dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_phoneno" />

                            <TextView
                                android:id="@+id/tv_phoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Phone Number"
                                android:textColor="#e995a8" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_background_btn"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="32dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/ic_location" />

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Address"
                                android:textColor="#e995a8" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/profile_bg_btt"
                        android:drawableLeft="@drawable/ic_cart"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:drawablePadding="20dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/oswald_light"
                        android:paddingRight="15dp"
                        android:text="Thông tin đơn hàng"
                        android:textAllCaps="false"
                        android:textColor="#e995a8"
                        android:textSize="22sp" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/btt_logout"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:src="@android:drawable/ic_delete"
                        app:cb_color="#e995a8"
                        app:cb_pressedRingWidth="8dip" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>