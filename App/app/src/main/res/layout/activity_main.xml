<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btt_logoutUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BotNav"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="300dp"
        android:clickable="true"
        app:backgroundTint="@color/ic_launcher_background"
        app:borderWidth="1dp"
        app:srcCompat="@drawable/ic_logout2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btt_chatUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BotNav"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="370dp"
        android:clickable="true"
        app:backgroundTint="@color/ic_launcher_background"
        app:borderWidth="1dp"
        app:srcCompat="@drawable/ic_chat2" />

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/BotNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_payment"
        android:elevation="5dp" />

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigationViewPager
        android:id="@+id/BotNavVPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/BotNav" >

    </com.aurelhubert.ahbottomnavigation.AHBottomNavigationViewPager>

</RelativeLayout>